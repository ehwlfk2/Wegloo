<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

        <!-- 버튼이 눌렸을 때 -->
        <item android:state_pressed="true">
            <!-- image 대신 직접 selector 를 그리겠다고 선언한다. -->
            <shape>

                <!-- 도형안에 채워질 색을 정의한다. -->
                <solid android:color = "@color/colorBlueDark"/>

                <!-- width = 테두리 선의 굵기, color = 테두리 선의 색을 정의한다. -->
                <stroke android:width="2dp" android:color="@color/colorBlack"/>

                <!-- 각 모서리의 라운드 처리 - 값이 클수록 라운드의 각이 커진다. -->
                <corners android:radius="12dp" />

            </shape>
        </item>

        <!-- 위와 동일하다. -->
        <item android:state_pressed="false">
            <shape>
                <solid android:color="@color/colorBlueBright"/>
                <padding
                    android:bottom="20dp"
                    android:top="20dp"
                    android:left="20dp"
                    android:right="20dp"
                    />
                <corners android:radius="12dp"/>

            </shape>
        </item>

</selector>