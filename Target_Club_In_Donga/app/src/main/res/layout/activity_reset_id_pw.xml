<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#E7E4E4"
    tools:context=".Package_LogIn.Reset_id_pw">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF">
        <ImageView
            android:id="@+id/login_logo_0"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:src="@drawable/wegloo_color"
            android:layout_marginTop="15dp"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="10dp"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            android:padding="0dp"

            tools:ignore="ContentDescription" />
        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />
        <ImageView
            android:id="@+id/find_back"
            android:layout_width="31dp"
            android:layout_height="30dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_clear"/>
    </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="아이디 찾기"
            android:textSize="14dp"
            android:layout_margin="10dp"
            android:textColor="#222121"/>
        <!-- START 아이디 찾기 ( 이름, 폰번호 -> 아이디 )-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:orientation="vertical">
            <EditText
                android:id="@+id/find_username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="가입된 이름"
                android:background="@drawable/box_edittext"
                android:paddingLeft="10dp"
                android:paddingBottom="7dp"
                android:paddingTop="7dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="15dp"
                />
            <EditText
                android:id="@+id/find_user_phonenumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="가입된 휴대폰 번호"
                android:background="@drawable/box_edittext"
                android:paddingLeft="10dp"
                android:paddingBottom="7dp"
                android:paddingTop="7dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="7dp"
                android:layout_marginEnd="15dp"/>
            <Button
                android:id="@+id/find_userID_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="확인"
                android:textColor="@color/color_White"
                android:textSize="20dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="7dp"
                android:layout_marginEnd="15dp"
                android:layout_marginBottom="15dp"
                android:background="@drawable/logoin_button_ver0"/>
        </LinearLayout>
        <!-- END 아이디 찾기 ( 이름, 폰번호 -> 아이디 )-->

        <!-- START 비밀번호 찾기 ( 이메일 )-->
        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="비밀번호 찾기"
                android:textSize="14dp"
                android:layout_margin="10dp"
                android:textColor="#222121"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:orientation="vertical">
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="가입된 이메일"
                    android:background="@drawable/box_edittext"
                    android:paddingLeft="10dp"
                    android:paddingBottom="7dp"
                    android:paddingTop="7dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginEnd="15dp"/>
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="확인"
                    android:textColor="@color/color_White"
                    android:textSize="20dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="7dp"
                    android:layout_marginEnd="15dp"
                    android:background="@drawable/logoin_button_ver0"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="15dp"
                    android:text="*해당 이메일로 비밀번호 변경 방법을 안내해드립니다."/>
            </LinearLayout>
            <!-- END 아이디 찾기 ( 이름, 폰번호 -> 아이디 )-->
    </LinearLayout>
    <TextView
        android:layout_marginTop="15dp"
        android:layout_marginStart="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="이메일이 오지 않는다면?"
        android:textStyle="bold"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="이메일 서비스 제공자 사정에 의해 즉시 도착하지 않을 수 있으니,
        최대 30분 정도 기다리신 후 다시 시도해주세요. \n그래도 오지 않는다면 이메일이 스팸편지함으로 이동하지 않았는지 확인해보세요."
        android:layout_marginTop="5dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"/>

</LinearLayout>