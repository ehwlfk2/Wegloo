<resources>

    <!-- Base application theme. -->
    <!--<style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">-->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/default_color</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/fbutton_color_orange</item>
        <item name="android:statusBarColor">@color/default_color</item>

    </style>

    <style name="Home_Text_Style" parent="@style/Widget.AppCompat.TextView.SpinnerItem">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">40dp</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:fontFamily">@font/lottedreammedium</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="Top_Content_Text_Style" parent="@style/Widget.AppCompat.TextView.SpinnerItem">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">30dp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:fontFamily">@font/lottedreammedium</item>
        <item name="android:saveEnabled">false</item>
        <item name="android:singleLine">true</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="Content_Text_Style" parent="@style/Widget.AppCompat.TextView.SpinnerItem">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">15dp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:fontFamily">@font/lottedreammedium</item>
        <item name="android:saveEnabled">false</item>
        <item name="android:singleLine">true</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="Content_Classification_Text_Style" parent="@style/Widget.AppCompat.TextView.SpinnerItem">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">18dp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:fontFamily">@font/lottedreammedium</item>
        <item name="android:saveEnabled">false</item>
        <item name="android:singleLine">true</item>
        <item name="android:background">@color/default_color</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="Line_Style" parent="@style/Widget.AppCompat.TextView.SpinnerItem">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">2dp</item>
        <item name="android:layout_marginTop">3dp</item>
        <item name="android:layout_marginBottom">3dp</item>
        <item name="android:background">#4F000000</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="EditTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorAccent">@color/color_Orange</item>
        <item name="colorControlNormal">@color/color_Orange</item>
    </style>
    <!-- 아래 스타일을 추가해 준다 -->
    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/background_splash</item>
    </style>

    <style name="Translucent" parent="Translucent.Base"/>

    <style name="Translucent.Base" parent="android:Theme.Translucent.NoTitleBar">
        <item name="android:progressBarStyle">@android:style/Theme.NoDisplay</item>
    </style>

    <style name="Custombutton" >
        <item name="android:background">@drawable/icon_base_vector_ver0</item>
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
        <item name="android:radius">20dp</item>
        <item name="android:elevation">2dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
    </style>

</resources>
