<resources>

    <!-- Base application theme. -->
    <!--<style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">-->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/default_color</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:statusBarColor">@color/default_color</item>

    </style>

    <style name="Home_Text_Style" parent="@style/Widget.AppCompat.TextView.SpinnerItem">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">40dp</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:fontFamily">@font/lottedreammedium</item>
    </style>

    <style name="Top_Content_Text_Style" parent="@style/Widget.AppCompat.TextView.SpinnerItem">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">30dp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:fontFamily">@font/lottedreammedium</item>
        <item name="android:saveEnabled">false</item>
        <item name="android:singleLine">true</item>
        <item name="android:paddingLeft">20dp</item>
    </style>

    <style name="Content_Text_Style" parent="@style/Widget.AppCompat.TextView.SpinnerItem">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">15dp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:fontFamily">@font/lottedreammedium</item>
        <item name="android:saveEnabled">false</item>
        <item name="android:singleLine">true</item>
        <item name="android:paddingLeft">20dp</item>
    </style>

    <style name="Content_Classification_Text_Style" parent="@style/Widget.AppCompat.TextView.SpinnerItem">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">18dp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:fontFamily">@font/lottedreammedium</item>
        <item name="android:saveEnabled">false</item>
        <item name="android:singleLine">true</item>
        <item name="android:background">#ff6d61</item>
        <item name="android:paddingLeft">20dp</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
